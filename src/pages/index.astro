---

import Layout from "@/layouts/Layout.astro";


import HeroImage from "@/components/HeroImage.astro";
import PlayButton from "@/components/PlayButton.astro";
import HeroFooter from "@/components/HeroFooter.astro";
import LogoMask from "@/components/LogoMask.astro";

import HeroKeyLogo from "@/assets/hero-key-logo.webp";
import HeroKeyBackground from "@/assets/hero-key-background.webp";
import Header from "@/components/Header.astro";

---

<!--Index.astro la página principal, secciones únicas -->
<Layout>
	<LogoMask>
		<section class="bg-white h-screen"> <!-- h-screen: altura = 100% altura ventana navegador -->
			<!-- Fondo -->
			<HeroImage logo={HeroKeyLogo} background={HeroKeyBackground} />
		</section>
	</LogoMask>

	<div class="fixed flex flex-col items-center justify-between h-screen px-20 py-16 w-full">
    	<Header />

		<PlayButton />

		<HeroFooter />
  	</div>
</Layout>

<script type="module">
  import gsapScroll from "/src/scripts/gsapScroll.js";
  gsapScroll();
</script>
